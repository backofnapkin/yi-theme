---
interface Props {
  id: string;
  title: string;
  className?: string;
}

const { id, title, className = "" } = Astro.props;
---

<div class={`aspect-w-16 aspect-h-9 rounded-lg overflow-hidden ${className}`}>
  <iframe
    src={`https://www.youtube.com/embed/${id}`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    class="w-full h-full"
  />
</div>
