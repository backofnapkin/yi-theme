<button type="button" id="menu-icon" class="header-btn" title="Menu">
  <i class="ri-menu-fill"/>
</button>
<button type="button" id="menu-icon-close" class="header-btn hidden" title="Menu">
  <i class="ri-close-fill"></i>
</button>

<script>
  // Get all necessary elements
  const menuIcon = document.getElementById("menu-icon");
  const menuCloseIcon = document.getElementById("menu-icon-close");
  const mobileMenu = document.getElementById("mobile-menu");
  const showAsideBtn = document.getElementById("aside-btn");
  const closeAsideBtn = document.getElementById("aside-close-btn");
  const personalInfo = document.getElementById("personal-info");

  // Function to toggle menu visibility
  function toggleMenu() {
    if (!menuIcon || !menuCloseIcon || !mobileMenu) return;

    // Toggle menu icons
    menuIcon.classList.toggle("hidden");
    menuCloseIcon.classList.toggle("hidden");
    mobileMenu.classList.toggle("hidden");

    // Handle aside button if it exists
    if (showAsideBtn && closeAsideBtn && personalInfo) {
      if (showAsideBtn.classList.contains('hidden')) {
        showAsideBtn.classList.remove("hidden");
        closeAsideBtn.classList.add("hidden");
        personalInfo.classList.add("hidden");
      }
    }
  }

  // Add click event listeners
  if (menuIcon) {
    menuIcon.addEventListener("click", toggleMenu);
  }

  if (menuCloseIcon) {
    menuCloseIcon.addEventListener("click", toggleMenu);
  }
</script>
