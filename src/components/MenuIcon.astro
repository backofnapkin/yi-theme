<button type="button" id="menu-icon" class="header-btn" title="Menu">
  <i class="ri-menu-fill"></i>
</button>
<button type="button" id="menu-icon-close" class="header-btn hidden" title="Menu">
  <i class="ri-close-fill"></i>
</button>
<script>
  window.onload = function() {
    try {
      console.log('Script starting...');
      
      const menuButton = document.querySelector("#menu-icon");
      const closeButton = document.querySelector("#menu-icon-close");
      const mobileMenu = document.querySelector("#mobile-menu");
      
      console.log('Elements found:', {
        menuButton: menuButton ? 'found' : 'missing',
        closeButton: closeButton ? 'found' : 'missing',
        mobileMenu: mobileMenu ? 'found' : 'missing'
      });

      if (menuButton && closeButton && mobileMenu) {
        const toggleMenu = () => {
          menuButton.classList.toggle("hidden");
          closeButton.classList.toggle("hidden");
          mobileMenu.classList.toggle("hidden");
          console.log('Menu toggled');
        };

        menuButton.addEventListener("click", toggleMenu, false);
        closeButton.addEventListener("click", toggleMenu, false);
        console.log('Event listeners added');
      } else {
        console.log('Some elements are missing');
      }
    } catch (error) {
      console.log('Error in menu script:', error);
    }
  };
</script>
